{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    // (config, env) => {} 只用到后面的参数，前面的参数没用到时，会报错 typescript@5.1.3
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Other */
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
